<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ezioshiki.twittersearcher.presentation.view.activity.SearchResultActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/search_result_act_search_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        />

    <ImageButton
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/search_result_act_search_btn"
        android:layout_marginTop="4dp"
        android:scaleType="centerInside"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_action_search"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_result_act_twitter_list"
        android:layout_below="@id/search_result_act_search_bar"
        >


    </android.support.v7.widget.RecyclerView>

    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        style="@style/Widget.AppCompat.ProgressBar"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:id="@+id/search_result_act_loading"
        />

</RelativeLayout>
